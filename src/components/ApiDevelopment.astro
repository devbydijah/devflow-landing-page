<span class="text-gray-500"> 3 | </span><span class="text-gray-500">// Initialize the client</span>
<span class="text-gray-500"> 4 | </span><span class="text-purple-400">const</span> api = <span class="text-blue-400">new</span> <span class="text-yellow-400">DevAPI</span>({
<span class="text-gray-500"> 5 | </span>  apiKey: <span class="text-green-400">'YOUR_API_KEY'</span>, <span class="text-gray-500">// Get yours from devapi.app</span>
<span class="text-gray-500"> 6 | </span>  apiSecret: <span class="text-green-400">'YOUR_API_SECRET'</span>
<span class="text-gray-500"> 7 | </span>});
<span class="text-gray-500"> 8 | </span>
<span class="text-gray-500"> 9 | </span><span class="text-gray-500">// Create a new endpoint</span>
<span class="text-gray-500">10 | </span><span class="text-purple-400">const</span> userEndpoint = api.<span class="text-yellow-400">createEndpoint</span>({
<span class="text-gray-500">11 | </span>  path: <span class="text-green-400">'/users/:id'</span>,
<span class="text-gray-500">12 | </span>  method: <span class="text-green-400">'GET'</span>,
<span class="text-gray-500">13 | </span>  <span class="text-blue-400">async</span> <span class="text-yellow-400">handler</span>(<span class="text-orange-400">req</span>, <span class="text-orange-400">res</span>) {
<span class="text-gray-500">14 | </span>    <span class="text-purple-400">const</span> { <span class="text-orange-400">id</span> } = req.<span class="text-yellow-400">params</span>;
<span class="text-gray-500">15 | </span>    <span class="text-gray-500">// Fetch user from database or another service</span>
<span class="text-gray-500">16 | </span>    <span class="text-purple-400">const</span> user = { id, name: <span class="text-green-400">'Jane Doe'</span>, email: <span class="text-green-400">'jane@example.com'</span> };
<span class="text-gray-500">17 | </span>    <span class="text-purple-400">return</span> res.<span class="text-yellow-400">json</span>(user);
<span class="text-gray-500">18 | </span>  }
<span class="text-gray-500">19 | </span>});
<span class="text-gray-500">20 | </span>
<span class="text-gray-500">21 | </span><span class="text-gray-500">// Deploy your API with one command</span>
<span class="text-gray-500">22 | </span>api.<span class="text-yellow-400">deploy</span>().<span class="text-yellow-400">then</span>(() => {
<span class="text-gray-500">23 | </span>  <span class="text-yellow-400">console</span>.<span class="text-blue-400">log</span>(<span class="text-green-400">'ðŸš€ API deployed successfully!'</span>);
<span class="text-gray-500">24 | </span>});
</code>
        </pre>
      </div>
    </div>
  </div>
</section>

