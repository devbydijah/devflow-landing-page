---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();

// Get related posts (excluding current post)
const allPosts = await getCollection("blog");
const relatedPosts = allPosts.filter((p) => p.slug !== post.slug).slice(0, 2);
---

<Layout title={post.data.title} description={post.data.description}>
  <main class="blog-post">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container">
        <div class="hero-content">
          <div class="breadcrumb">
            <a href="/" class="breadcrumb-link">Home</a>
            <span class="breadcrumb-separator">‚Üí</span>
            <a href="/blog" class="breadcrumb-link">Blog</a>
            <span class="breadcrumb-separator">‚Üí</span>
            <span class="breadcrumb-current">{post.data.title}</span>
          </div>

          <h1 class="hero-title">{post.data.title}</h1>
          <p class="hero-description">{post.data.description}</p>

          <div class="post-meta">
            <div class="meta-item">
              <span class="meta-icon">üìÖ</span>
              <span class="meta-text">
                {
                  new Date(post.data.pubDate).toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })
                }
              </span>
            </div>
            <div class="meta-item">
              <span class="meta-icon">üë§</span>
              <span class="meta-text">{post.data.author}</span>
            </div>
            <div class="meta-item">
              <span class="meta-icon">üè∑Ô∏è</span>
              <span class="meta-text"
                >{post.data.tags?.join(", ") || "General"}</span
              >
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Cover Image Placeholder -->
    <section class="cover-image-section">
      <div class="container">
        <div class="cover-image-wrapper">
          <div class="cover-image-placeholder">
            <div class="placeholder-pattern"></div>
            <div class="placeholder-content">
              <span class="placeholder-text">Article Image</span>
              <p class="placeholder-subtitle">
                Query: {post.data.coverImageQuery}
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Article Content -->
    <section class="article-section">
      <div class="container">
        <div class="article-layout">
          <article class="article-content">
            <Content />
          </article>

          <!-- Table of Contents (Sidebar) -->
          <aside class="article-sidebar">
            <div class="sidebar-card">
              <h3 class="sidebar-title">Quick Navigation</h3>
              <div class="toc-placeholder">
                <div class="toc-item">üìñ Introduction</div>
                <div class="toc-item">üîß Getting Started</div>
                <div class="toc-item">üí° Best Practices</div>
                <div class="toc-item">üéØ Conclusion</div>
              </div>
            </div>

            <div class="sidebar-card">
              <h3 class="sidebar-title">Share This Post</h3>
              <div class="share-buttons">
                <button class="share-btn twitter">üê¶ Twitter</button>
                <button class="share-btn linkedin">üíº LinkedIn</button>
                <button class="share-btn copy">üìã Copy Link</button>
              </div>
            </div>
          </aside>
        </div>
      </div>
    </section>

    <!-- Related Articles -->
    {
      relatedPosts.length > 0 && (
        <section class="related-section">
          <div class="container">
            <h2 class="section-title">Related Articles</h2>
            <div class="related-grid">
              {relatedPosts.map((relatedPost) => (
                <article class="related-card">
                  <div class="related-content">
                    <div class="related-meta">
                      <span class="related-date">
                        {new Date(relatedPost.data.pubDate).toLocaleDateString(
                          "en-US",
                          {
                            month: "short",
                            day: "numeric",
                          }
                        )}
                      </span>
                      <span class="related-tag">
                        {relatedPost.data.tags?.[0] || "Article"}
                      </span>
                    </div>
                    <h3 class="related-title">
                      <a
                        href={`/blog/${relatedPost.slug}`}
                        class="related-link"
                      >
                        {relatedPost.data.title}
                      </a>
                    </h3>
                    <p class="related-description">
                      {relatedPost.data.description}
                    </p>
                    <div class="related-author">
                      <span class="author-avatar">üë§</span>
                      <span class="author-name">{relatedPost.data.author}</span>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          </div>
        </section>
      )
    }

    <!-- Newsletter Section -->
    <section class="newsletter-section">
      <div class="container">
        <div class="newsletter-card">
          <div class="newsletter-content">
            <div class="newsletter-icon">üìß</div>
            <h2 class="newsletter-title">Stay Updated</h2>
            <p class="newsletter-description">
              Get the latest developer insights, API tips, and industry news
              delivered to your inbox.
            </p>
            <form class="newsletter-form">
              <div class="form-group">
                <input
                  type="email"
                  placeholder="Enter your email address"
                  class="newsletter-input"
                  required
                />
                <button type="submit" class="newsletter-btn">
                  Subscribe
                </button>
              </div>
              <p class="newsletter-note">
                No spam, unsubscribe at any time. We respect your privacy.
              </p>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Back to Blog -->
    <section class="back-section">
      <div class="container">
        <div class="back-wrapper">
          <a href="/blog" class="back-link">
            <span class="back-icon">‚Üê</span>
            Back to All Articles
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
