---
// src/components/Documentation.astro
import { BookOpen, Code2, TerminalSquare } from 'lucide-astro'; // Using lucide-astro for Astro components
---
<section id="documentation" class="bg-transparent text-white py-20">
  <div class="container mx-auto px-6 text-center">
    <h2 class="text-4xl font-bold mb-4">Documentation</h2>
    <p class="text-gray-400 mb-12 text-lg">Everything you need to build amazing APIs</p>
    <div class="grid md:grid-cols-3 gap-8">
      <div class="bg-gray-800 p-8 rounded-lg flex flex-col items-start text-left h-full">
        <BookOpen class="text-blue-500 mb-4 w-10 h-10" />
        <h3 class="text-2xl font-bold mb-2">Getting Started</h3>
        <p class="text-gray-400 mb-6 flex-grow">
          Quick start guides and tutorials to get you up and running in minutes.
        </p>
        <a href="#" class="mt-auto bg-gray-700 hover:bg-gray-600 text-white font-semibold py-3 px-6 rounded-lg w-full text-center">
          View Guides
        </a>
      </div>
      <div class="bg-gray-800 p-8 rounded-lg flex flex-col items-start text-left h-full">
        <Code2 class="text-blue-500 mb-4 w-10 h-10" />
        <h3 class="text-2xl font-bold mb-2">API Reference</h3>
        <p class="text-gray-400 mb-6 flex-grow">
          Detailed documentation of our API endpoints, parameters, and responses.
        </p>
        <a href="#" class="mt-auto bg-gray-700 hover:bg-gray-600 text-white font-semibold py-3 px-6 rounded-lg w-full text-center">
          Explore API
        </a>
      </div>
      <div class="bg-gray-800 p-8 rounded-lg flex flex-col items-start text-left h-full">
        <TerminalSquare class="text-blue-500 mb-4 w-10 h-10" />
        <h3 class="text-2xl font-bold mb-2">CLI Tools</h3>
        <p class="text-gray-400 mb-6 flex-grow">
          Command-line tools and utilities to streamline your workflow.
        </p>
        <a href="#" class="mt-auto bg-gray-700 hover:bg-gray-600 text-white font-semibold py-3 px-6 rounded-lg w-full text-center">
          Learn More
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    background-color: #0c111f; /* Dark blue background */
  }
  .bg-gray-800 {
    background-color: #1f2937; /* Slightly lighter card background */
  }
</style>
