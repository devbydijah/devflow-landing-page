---
// src/components/Pricing.astro
import { Check } from 'lucide-astro';

const plans = [
  {
    name: 'Starter',
    price: '$0',
    priceSuffix: '/month',
    features: [
      '1,000 API calls/month',
      'Basic rate limiting',
      'Community support',
      'Basic analytics',
    ],
    buttonText: 'Get Started',
    bgColor: 'bg-gray-800',
    textColor: 'text-white',
    buttonColor: 'bg-gray-700 hover:bg-gray-600',
    borderColor: 'border-gray-700',
    recommended: false,
  },
  {
    name: 'Pro',
    price: '$49',
    priceSuffix: '/month',
    features: [
      '100,000 API calls/month',
      'Advanced rate limiting',
      'Priority support',
      'Advanced analytics',
      'Custom domains',
    ],
    buttonText: 'Get Started',
    bgColor: 'bg-gray-800',
    textColor: 'text-white',
    buttonColor: 'bg-blue-600 hover:bg-blue-700',
    borderColor: 'border-blue-600',
    recommended: true,
  },
  {
    name: 'Enterprise',
    price: '$199',
    priceSuffix: '/month',
    features: [
      'Unlimited API calls',
      'Custom rate limiting',
      '24/7 dedicated support',
      'Advanced analytics',
      'Custom domains',
      'SLA guarantee',
    ],
    buttonText: 'Get Started',
    bgColor: 'bg-gray-800',
    textColor: 'text-white',
    buttonColor: 'bg-gray-700 hover:bg-gray-600',
    borderColor: 'border-gray-700',
    recommended: false,
  },
];
---

<section class="bg-transparent text-white py-20">
  <div class="container mx-auto px-6 text-center">
    <h2 class="text-4xl font-bold mb-4">Simple, transparent pricing</h2>
    <p class="text-gray-400 mb-12 text-lg">Choose the plan that's right for you</p>

    <div class="grid md:grid-cols-3 gap-8 items-stretch">
      {plans.map(plan => (
        <div class={`relative p-8 rounded-lg flex flex-col h-full ${plan.bgColor} border-2 ${plan.borderColor}`}>
          {plan.recommended && (
            <div class="absolute top-0 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-blue-600 text-white text-xs font-semibold px-3 py-1 rounded-full">
              Recommended
            </div>
          )}
          <h3 class="text-2xl font-bold mb-1">{plan.name}</h3>
          <p class="text-4xl font-extrabold mb-1">{plan.price}<span class="text-xl font-normal text-gray-400">{plan.priceSuffix}</span></p>
          
          <ul class="text-left my-8 space-y-3 flex-grow">
            {plan.features.map(feature => (
              <li class="flex items-center">
                <Check class="w-5 h-5 text-blue-500 mr-2 flex-shrink-0" />
                <span class="text-gray-300">{feature}</span>
              </li>
            ))}
          </ul>

          <a href="#" class={`mt-auto ${plan.buttonColor} text-white font-semibold py-3 px-6 rounded-lg w-full block text-center`}>
            {plan.buttonText}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  section {
    background-color: #0c111f; /* Dark blue background */
  }
  .bg-gray-800 {
    background-color: #1f2937; /* Slightly lighter card background */
  }
</style>
