---
// src/components/ReadyToBuild.astro
import { BookOpen, Github, ArrowRight } from 'lucide-astro';
---

<section class="bg-transparent text-white py-20">
  <div class="container mx-auto px-6 text-center">
    <h2 class="text-4xl font-bold mb-4">Ready to build your API?</h2>
    <p class="text-gray-400 mb-12 text-lg max-w-2xl mx-auto">
      Get started in minutes with our comprehensive documentation and examples.
    </p>

    <div class="flex flex-col md:flex-row justify-center gap-6 mb-12">
      <a href="#" class="bg-gray-800 hover:bg-gray-700 p-6 rounded-lg flex items-center space-x-4 w-full md:w-auto md:min-w-[300px] transition-colors">
        <BookOpen class="w-8 h-8 text-blue-500 flex-shrink-0" />
        <div>
          <h3 class="font-semibold text-lg text-left">Documentation</h3>
          <p class="text-gray-400 text-sm text-left">Read our detailed guides</p>
        </div>
        <ArrowRight class="w-5 h-5 text-gray-500 ml-auto flex-shrink-0" />
      </a>
      <a href="#" class="bg-gray-800 hover:bg-gray-700 p-6 rounded-lg flex items-center space-x-4 w-full md:w-auto md:min-w-[300px] transition-colors">
        <Github class="w-8 h-8 text-blue-500 flex-shrink-0" />
        <div>
          <h3 class="font-semibold text-lg text-left">GitHub</h3>
          <p class="text-gray-400 text-sm text-left">View examples & contribute</p>
        </div>
        <ArrowRight class="w-5 h-5 text-gray-500 ml-auto flex-shrink-0" />
      </a>
    </div>

    <a href="#" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 px-8 rounded-lg text-lg inline-flex items-center transition-colors">
      Sign up for free <ArrowRight class="w-5 h-5 ml-2" />
    </a>
  </div>
</section>

<style>
  section {
    background-color: #0c111f; /* Dark blue background */
  }
  .bg-gray-800 {
    background-color: #1f2937; /* Slightly lighter card background */
  }
</style>
